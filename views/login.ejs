<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!--Link font awesome CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!--Link Bootstrap CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  </head>
  <body>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#"><div class="head1">Students Records</div></a>
          </div>
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/insert">Records Entry</a></li>
            <li><a href="/show">Edit Records</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
              <!-- <li><a href="/signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li> -->
              <%if(username!=''){%>
              <li class="drop"><a href="/signup" class="dropdown-toggle" data-toggle="dropdown";><span class="glyphicon glyphicon-user" ></span><%=username%></a>
                <ul class="dropdown-menu">
                  <li><a href="/insert">Insert Records</a></li>
                  <li><a href="/show">Show Records</a></li>
                  <li><a href="/logout">Logout</a></li>
                </ul>
              </li>
              <%}%>
              <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
             
            <form class="navbar-form navbar-left" action="/search" method="post">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search by name" name="name">
              </div>
              <button type="submit" value="search" class="btn btn-success">Submit</button>
            </form>
          </ul>
        </div>
      </nav>
      <div class="container" style="margin-top: 10vh;">
        
        <div class="signup-form">
                <form action="/login" method="post">
                    <h2>Login</h2>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Enter Email" required="required">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Enter Password" required="required">
                    </div>
                    <div class="form-group">
                        <label class="checkbox-inline"> Create New Account? <a href="/signup">Sign Up</a></label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-lg btn-block">Login</button>
                    </div>
                </form>

                <% if(msg !=''){%>
                  <div class="alert alert-danger">
                      <%= msg%>.
                    </div>
                    <%}%>
        </div>

      </div>
     
    
   
 

   

  </body>
</html>
