<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!--Link font awesome CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!--Link Bootstrap CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  </head>
  <body>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#"><div class="head1">Students Records</div></a>
          </div>
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/insert">Records Entry</a></li>
            <li><a href="/show">Edit Records</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
              <li><a href="/signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
              <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
             
            <form class="navbar-form navbar-left" action="/search" method="post">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search by name" name="name">
              </div>
              <button type="submit" value="search" class="btn btn-success">Submit</button>
            </form>
          </ul>
        </div>
      </nav>

      <div class="container" style="margin-top: 5vh;">
          <table class="table table-striped table-bordered table-hover" style="text-align: center;">
            <thead">
              <tr  style="background-color: rgb(36, 31, 31); color: white; ">
                <th style="text-align: center; padding: 10px;">Name</th>
                <th style="text-align: center; padding: 10px;">Email</th>
                <th style="text-align: center; padding: 10px;">Class</th>
                <th style="text-align: center; padding: 10px;">Gender</th>
                <th style="text-align: center; padding: 10px;">Contact</th>  
                <th style="text-align: center; padding: 10px;">Action</th>
              </tr>
            </thead>
            <tbody>
                <% records.forEach(function(row) {%>
                  <tr>
                    <td><%= row.name %></td>
                    <td><%= row.email %></td>
                    <td><%= row.class %></td>
                    <td><%= row.gender%></td>
                    <td><%= row.contact%></td>
                    <td><a class="btn btn-primary btn-xs" href="/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-xs" href="/delete/<%= row._id %>"><i class="fa fa-trash"></i></a></td>
                  </tr>
                  <% }) %>
              
            </tbody>
          </table>
          <% if(showmsg !=''){%>
            <div class="alert alert-success">
              <%= showmsg%>.
            </div>
          <%}%>
        </div>
    
   
 

   

  </body>
</html>
